.orderdetails_container {
  position: fixed;
  bottom: 0;
  z-index: 1000;
  
  background-color: #FCFBF8;

  font-size: 30rpx;
  font-weight: 300;
}

.nav{
  display: flex;
  align-items: center;

  border-bottom: 1rpx solid #E5E5E5;
  box-sizing:  border-box;
}

.nav_imagecontainer {
  display: flex;
  align-items: center;
  width: 140rpx;
  height: 80%;
}

.nav .back{
  width: 20px;
  height: 20px;
  margin-left: 20rpx;
}


.btn-box{
  height: 120rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 5px 2px #D2CFCF;
  display: flex;
}

.btn-box .item {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}


.btn-box .item .btn{
  width: 140rpx;
  height: 60rpx;
  color: #FCFBF8;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status_noover {
  background-color: #EC7C81
}

.status_over {
  background-color: #B0B1B0
}

.backgc_feedback_but{
  background-color:#005B66
}

.backgc_torecord {
  background-color:  #75B591
}

.phone {
  color: #4395FD;
  font-weight: bold;
  text-decoration:underline;
}

