.model {
  margin-bottom: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.model .item {
  width: 100%;
  height: 60rpx; 
  display: flex;
}

.model .item .lable {
  width: 160rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}

.model .item .info {
  flex: 1;
  display: flex;
  align-items: center;
}

.model .item .details_but {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #B0B1B0;
  box-sizing: border-box;
}

.for-upload-pics{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

