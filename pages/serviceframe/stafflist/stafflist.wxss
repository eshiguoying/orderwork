.shadepanel {
  background-color: rgba(102, 101, 100, 0.7);
  position: fixed;
  bottom: 0;
  z-index: 1001;
  
  display: flex;
  align-items: center;
  justify-content: center;
  
  font-size: 30rpx;
  font-weight: 300;
}

.staffinfolist {
  width: 600rpx;
  
  position: absolute;
  z-index: 701;
  background-color: #FCFBF8;
  border-radius: 10rpx;
  
  display: flex;
  flex-direction: column;
}

.shadepanel .staffinfolist .head {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;

  box-shadow: 0px 1px 5px #D2CFCF;
}

.shadepanel .staffinfolist .head .item {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shadepanel .staffinfolist .head .center {
  flex: 1;
}

.shadepanel .staffinfolist .body .stafflistscroll {
  max-height: 640rpx;
}

.shadepanel .staffinfolist .body .stafflistscroll .staffinfo{
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 80rpx;
  
  display: flex;
  align-items: center;
  
  border-bottom: 1rpx dashed #CBCCCD;
  box-sizing: border-box;
}

.shadepanel .staffinfolist .body .stafflistscroll .staffinfo:last-child {
  border-bottom: 0;
}

.shadepanel .staffinfolist .body .stafflistscroll .on{
  background-color: rgba(182,184,184, 0.2)
}

.shadepanel .staffinfolist .body .stafflistscroll .staffinfo .item{
  display: flex;
  align-items: center;
}

.shadepanel .staffinfolist .body .stafflistscroll .staffinfo .center{
  flex: 1;
}