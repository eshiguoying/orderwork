.shadepanel {
  width: 100%;
  background-color: #FCFBF8;
  position: fixed;
  bottom: 0;
  z-index: 700;
  display: flex;
  flex-direction: column;
}


.shadepanel .head{
  width: 100%;
  height: 80rpx;
  position: relative;
  border: 1rpx solid black;
}

.shadepanel .head .cancal {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}

.shadepanel .head .cancal image { 
  width: 40rpx;
  height: 40rpx;
}

.log_body {
  flex: 1;
}

.no-order-img{
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  display: block;
  margin-top: 100rpx;
}
.no-order-text{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.scroll-wrap{
  height: 100%;
}
.record-item:first-child{
  margin-top: 30rpx;
}
.record-item{
  height: 100rpx;
  width: 97%;
  margin: 0 auto;
  margin-bottom: 50rpx;
  clear: both;
}
.record-time{
  width: 200rpx;
  text-align: right;
  float: left;
}
.record-time .hour{
  font-size: 32rpx;
}
.r-icon-out{
  width: 40rpx;
  height: 40rpx;
  border: none;
  border-radius: 100%;
  float: left;
  margin-left: 30rpx;
  margin-top: 22rpx;
  position: relative;
}
.r-icon-inner{
  width: 20rpx;
  height: 20rpx;
  background: #ddd;
  border-radius: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -10rpx;
  margin-top: -10rpx;
}
.line{
  position: absolute;
  left: 50%;
  top: 55rpx;
  width: 1rpx;
  height: 80rpx;
  border-left: dashed 1px #ddd; 
}
.event{
  width: 400rpx;
  float: left;
  margin-left: 30rpx;
  margin-top: 23rpx;
}