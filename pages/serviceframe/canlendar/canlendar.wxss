/* pages/canlendar/canlendar.wxss */
.canlendarBgView{
  width: 100%;
  height: 100%;
  background: #FCFBF8;
  
  position: absolute;
  left: 0;
  top: 0;
  z-index: 11;

  border-top: 1rpx solid #E5E5E5;
  display: flex;
  flex-direction: column;
}

.canlendarBgView .head__ {
  display: flex;
  width: 100%;
  height: 80rpx;
}

.canlendarBgView .datebody_ {
  flex: 1;
} 

.canlendarBgView .head__ .space {
  flex: 1;
}

.canlendarBgView .head__ .cancel {
  width: 90rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.weekBgView{
  height: 40px;
  clear: both;
}
.weekView{
  height: 40px;
  line-height: 40px;
  width: 14.2%;
  float: left;
  text-align: center;
}
.canlendarView{
  clear: both;
}
.canlendarTopView{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.dateEmptyView,.dateView{
  width: 14.2%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  float: left;
}
.today{
  color: #fbc400;
}
.selectDay{
  background: #f6e4a3;
  border-radius: 6rpx;
  color: #333;
}