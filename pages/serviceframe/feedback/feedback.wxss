/* pages/feedback/feedback.wxss */
.shadepanel {
  background-color: rgba(102, 101, 100, 0.7);
  
  position: fixed;
  bottom: 0;
  z-index: 1001;
  
  display: flex;
  justify-content: center;
  align-items: center;
}

.feedback_container {
  height: 500rpx;
  border-radius: 10rpx;
  background-color: #FCFBF8;

  display: flex;
  flex-direction: column;
}

.feedback_container .input_body {
  width: 100%;
  height: 400rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.feedback_container .but {
  width: 100%;
  height: 100rpx;
}

.feedback-title{
  width: 97%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
}
.feedback-con{
  width: 96%;
  background: #fff;
  margin: 0 auto;
  padding: 5rpx;
  border-radius: 6rpx;
}
.placeholder{
  color: #ddd;
}
.feedback-sure{
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  width: 97%;
  margin: 30rpx auto;
  background: #333;
  border-radius: 6rpx;
  text-align: center;
}