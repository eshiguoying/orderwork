.shadepanel {
  background-color: rgba(102, 101, 100, 0.7);
  
  position: fixed;
  bottom: 0;
  z-index: 1001;
  
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 30rpx;
  font-weight: 100;
}

.feedback_container {
  height: 500rpx;
  border-radius: 10rpx;
  background-color: #FCFBF8;

  display: flex;
  flex-direction: column;
}

.feedback_container .but {
  width: 100%;
  height: 80rpx;

  box-shadow: 1px 2px 4px #E5E5E5;

  display: flex;
}

.feedback_container .but .item {
  width: 90rpx;
  height: 100%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.feedback_container .but .space {
  flex: 1;
}

.feedback_container .input_body {
  width: 100%;
  height: 420rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.feedback_container .input_body .feedback-con {
  width: 90%;
  height: 90%;
}