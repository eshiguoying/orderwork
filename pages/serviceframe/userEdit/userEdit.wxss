.shadepanel {
  background-color: rgba(102, 101, 100, 0.7);

  position: fixed;
  bottom: 0;
  z-index: 700;

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 30rpx;
  font-weight: 300;
}

.shadepanel .container {
  border-radius: 10rpx;
  background-color: #FCFBF8;

  display: flex;
  flex-direction: column;
}

.shadepanel .container ._head {
  width: 100%;
  height: 80rpx;

  box-shadow: 0px 1px 5px #D2CFCF;

  display: flex;
}

.shadepanel .container ._head .item {
  width: 90rpx;
  height: 100%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.shadepanel .container ._head .space {
  flex: 1;
}

.shadepanel .container ._body {
  display: flex;
  flex-direction: column;

  padding: 20rpx;
}

.shadepanel .container ._body .item{
  display: flex;
  align-items: center;

  height: 70rpx;
}

.shadepanel .container ._body .item .lable{
  width: 200rpx;

  display: flex;
  align-items: center;
}

.shadepanel .container ._body .item .content{
  flex: 1;

  display: flex;
  align-items: center;
}

.shadepanel .container ._body .item .content .worktype {
  width: 300rpx;
  height: 50rpx;
  
  display: flex;
  align-items: center;
}

.shadepanel .container ._body .item .content .worktype .item {
  width: 150rpx;
  height: 50rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  border: 2rpx solid #07233F;
  box-sizing: border-box;

  background-color: #FCFBF8;
  color: #07233F;
}

.shadepanel .container ._body .item .content .worktype .selected {
  border: 2rpx solid #07233F;
  box-sizing: border-box;

  background-color: #07233F;
  color: #FCFBF8;
}