  border: 3rpx solid #CBCCCD;
  font-size: 30rpx;
  font-weight: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ordercontainer .order_item .addr_time_item  .addr .takeaddr .detail{
  margin-left: 10rpx;
